{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "bb-component-SuperFieldGroup",
    "friendlyName": "Super Field Group",
    "description": "A Field Group Component for Budibase",
    "styles": [ "padding", "border", "background" ],
    "hasChildren": true,
    "showEmptyState" : true,
    "icon": "Group",
    "settings": [
      {
        "type" : "select",
        "key" : "labelPos",
        "label" : "Label Position",
        "options" : [
          { "label" : "Left", "value" : "left" },
          { "label" : "Above", "value" : "above" }
        ],
        "defaultValue" : "above"
      },
      {
        "type" : "text",
        "key" : "labelWidth",
        "label" : "Label Width",
        "dependsOn" : { "setting" : "labelPos" , "value" : "left"},
        "defaultValue" : "8rem"
      },
      {
        "type" : "select",
        "key" : "rowSpacing",
        "label" : "Row Spacing",
        "options" : [
          { "label" : "Extra Small", "value" : "XS" },
          { "label" : "Small", "value" : "S" },
          { "label" : "Medium", "value" : "M" },
          { "label" : "Large", "value" : "L" }
        ],
        "defaultValue" : "M"
      },
      {
        "type" : "select",
        "key" : "columnSpacing",
        "label" : "Column Spacing",
        "options" : [
          { "label" : "Extra Small", "value" : "XS" },
          { "label" : "Small", "value" : "S" },
          { "label" : "Medium", "value" : "M" },
          { "label" : "Large", "value" : "L" }
        ],
        "defaultValue" : "M"
      },
      {
        "type" : "number",
        "key" : "columns",
        "label" : "Columns",
        "min" : 1,
        "max" : 10,
        "defaultValue": 1
      },
      {
        "type" : "boolean",
        "key" : "disabled",
        "label" : "Disabled",
        "defaultValue": false
      },
      {
        "type" : "boolean",
        "key" : "hideHeader",
        "label" : "Hide Header",
        "defaultValue": false
      },
      {
        "type" : "boolean",
        "key" : "customLabels",
        "label" : "Customize Labels",
        "defaultValue": false
      },
      {
        "section" : true,
        "name" : "Customize Labels",
        "dependsOn" : "customLabels",
        "settings" : [
          {
            "type" : "select",
            "key" : "labelSize",
            "label" : "Size",
            "options" : [
              { "label" : "Small", "value" : "13px" },
              { "label" : "Medium", "value" : "14px" },
              { "label" : "Large", "value" : "15px" }
            ],
            "defaultValue" : "14px"
          },
          {
            "type" : "select",
            "key" : "labelWeight",
            "label" : "Weight",
            "options" : [
              { "label" : "Light", "value" : "400" },
              { "label" : "Normal", "value" : "500" },
              { "label" : "Bold", "value" : "600" },
              { "label" : "Bolder", "value" : "700" }
            ],
            "defaultValue" : "500"
          }
        ]
      },
      {
        "section" : true,
        "name" : "Header Settings",
        "dependsOn" : { "setting" : "hideHeader", "value" : false },
        "settings" : [
          {
            "type": "text",
            "key": "header",
            "label": "Header",
            "defaultValue" : "New Super Field Group"
          },
          {
            "type": "icon",
            "key": "headerIcon",
            "label": "Icon"
          },
          {
            "type" : "color",
            "key" : "headerFontColor",
            "label" : "Color",
            "defaultValue" : "var(--spectrum-global-color-gray-700)"
          }
        ]
      }
    ]
  }
}